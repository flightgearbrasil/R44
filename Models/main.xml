  <!-- Porte avant gauche -->
  <animation>
    <type>pick</type>
    <object-name>PorteAvantGauche</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>nasal</command>
        <script>doors.doorsystem.Lcrewexport();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteAvantGauche</object-name>
    <property>instrumentation/doors/Lcrew/position-norm</property>
    <factor> -80 </factor>
    <axis>
      <x1-m> -3.795 </x1-m>
      <y1-m> -0.607 </y1-m>
      <z1-m> -0.603 </z1-m>
      <x2-m> -3.631 </x2-m>
      <y2-m> -0.625 </y2-m>
      <z2-m> -0.266 </z2-m>
    </axis>
  </animation>

